[
  {
    "name": "基础属性",
    "attributes": [
      {
        "text": "组件标识",
        "bindControlAttr": "caption",
        "showType": "text"
      },
      {
        "text": "名称",
        "bindControlAttr": "label",
        "showType": "text"
      },
      {
        "text": "提示文字",
        "bindControlAttr": "placeholder",
        "showType": "text"
      },
      {
        "text": "名称是否显示",
        "bindControlAttr": "showLabel",
        "showType": "boolean"
      },
      {
        "text": "选项设置",
        "bindControlAttr": "metadata.dataSource",
        "showType": "dialog",
        "config": {
          "width": "900px",
          "content": "DesEnumEditor",
          "buttonText": "编辑选项",
          "title": "编辑选项"
        }
      },
      {
        "text": "是否只读",
        "showType": "boolean",
        "bindControlAttr": "readOnly"
      },
      {
        "text": "是否失效",
        "showType": "boolean",
        "bindControlAttr": "disabled"
      },
      {
        "text": "是否可见",
        "showType": "boolean",
        "bindControlAttr": "visible"
      },
      {
        "text": "取消上下边距",
        "bindControlAttr": "tbNoPadding",
        "showType": "boolean"
      },
      {
        "text": "是否可搜索",
        "bindControlAttr": "filterable",
        "showType": "boolean"
      },
      {
        "text": "是否多选",
        "bindControlAttr": "multiple",
        "showType": "boolean"
      },
      {
        "text": "是否可创建条目",
        "bindControlAttr": "allowCreate",
        "showType": "boolean"
      },
      {
        "text": "可选择上限 (多选有效)",
        "bindControlAttr": "maxChooseNum",
        "showType": "number",
        "desc": "<p>小于等于0表示无限制<p>"
      },
      {
        "text": "是否合并标签 (多选有效)",
        "bindControlAttr": "collapseTags",
        "showType": "boolean"
      },
      {
        "text": "选项dom渲染时间",
        "bindControlAttr": "optionRenderTime",
        "showType": "select",
        "dictionary": [
          {
            "text": "初始化时",
            "value": 0
          },
          {
            "text": "首次获得焦点时",
            "value": 1
          }
        ]
      },
      {
        "text": "只读状态简版",
        "showType": "boolean",
        "bindControlAttr": "simple",
        "desc": "<p>简化组件只读状态时的元素。如果组件在子表中加载可以有效提升表格性能<p>"
      },
      {
        "text": "只读状态下格式化",
        "showType": "select",
        "bindControlAttr": "formatter",
        "desc": "<p>只读状态下格式化<p>",
        "dictionary": [
          {
            "text": "显示文本",
            "value": "textValue^text"
          },
          {
            "text": "显示值",
            "value": "textValue^value"
          }
        ]
      },
      {
        "text": "描述文字(仅移动端有效)",
        "showType": "text",
        "bindControlAttr": "dataCapion",
        "desc": "<p>移动端运行该组件时会在名称后追加一段备注文字。</p><p>因布局上的问题PC端赞不支持</p>"
      },
      {
        "text": "语音地址(仅移动端有效)",
        "showType": "text",
        "bindControlAttr": "dataAudioUrl",
        "desc": "<p>移动端运行该组件时会在名称后追加一个图标，点击后播放MP3。</p><p>因布局上的问题PC端赞不支持</p>"
      },
      {
        "text": "视频地址(仅移动端有效)",
        "showType": "text",
        "bindControlAttr": "dataVideoUrl",
        "desc": "<p>移动端运行该组件时会在名称后追加一个图标，点击后播放MP4。</p><p>因布局上的问题PC端赞不支持<p>"
      }
    ]
  },
  {
    "name": "校验属性",
    "attributes": [{
      "text": "必填标识",
      "bindControlAttr": "required",
      "showType": "boolean",
      "desc": "<p>当前组件名称前显示<span style='color:red'>*</span>号，但与实际逻辑上是否必填无关</p>"
    },
      {
        "text": "校验规则",
        "bindControlAttr": "metadata.validate",
        "showType": "dialog",
        "config": {
          "content": "DesValidateRule",
          "width": "800px",
          "height": "60vh",
          "buttonText": "设置",
          "title": "设置"
        }
      },
      {
        "text": "校验错误提示位置",
        "bindControlAttr": "error_tipsPosition",
        "showType": "select",
        "dictionary": [{
          "text": "上",
          "value": "top"
        }, {
          "text": "右",
          "value": "right"
        },
          {
            "text": "下",
            "value": "bottom"
          },
          {
            "text": "左",
            "value": "left"
          }
        ]
      }
    ]
  },
  {
    "name": "高级属性",
    "attributes": [
