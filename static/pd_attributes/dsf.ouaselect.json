[
  {
    "name": "基础属性",
    "attributes": [
      {
        "text": "组件标识",
        "bindControlAttr": "caption",
        "showType": "text"
      },
      {
        "text": "名称",
        "bindControlAttr": "label",
        "showType": "text",
        "changeExecFunction": "renderContext"
      },
      {
        "text": "名称是否显示",
        "bindControlAttr": "showLabel",
        "showType": "boolean"
      },
      {
        "text": "是否只读",
        "showType": "boolean",
        "bindControlAttr": "readOnly"
      },
      {
        "text": "是否失效",
        "showType": "boolean",
        "bindControlAttr": "disabled",
        "changeExecFunction": "renderContext"
      },
      {
        "text": "是否可见",
        "showType": "boolean",
        "bindControlAttr": "visible",
        "changeExecFunction": "renderContext"
      },
      {
        "text": "数量上限",
        "bindControlAttr": "maxTags",
        "showType": "number",
        "type": "number"
      },
      {
        "text": "是否可排序",
        "bindControlAttr": "sort",
        "changeExecFunction": "uploadChooseList",
        "showType": "boolean"
      }
    ]
  },
  {
    "name": "高级属性",
    "attributes": [
      {
        "text": "数据配置",
        "bindControlAttr": "dataConfig",
        "showType": "dialog",
        "config": {
          "content": "TreeSelectorEdit",
          "width": "1400px",
          "height": "60vh",
          "params": {
            "type": "checkNode"
          }
        }
      },
      {
        "text": "描述文字",
        "showType": "text",
        "bindControlAttr": "dataCapion",
        "desc": "<p>移动端运行该组件时会在名称后追加一段备注文字。</p><p>因布局上的问题PC端暂不支持</p>"
      },
      {
        "text": "弹出窗口地址",
        "bindControlAttr": "dialogUrl",
        "showType": "text"
      },
      {
        "text": "弹出窗口标题",
        "bindControlAttr": "dialogTitle",
        "showType": "text"
      },
      {
        "text": "弹出窗口宽度",
        "bindControlAttr": "dialogWidth",
        "showType": "text"
      },
      {
        "text": "弹出窗口高度",
        "bindControlAttr": "dialogHeight",
        "showType": "text"
      },
      {
        "text": "默认值",
        "bindControlAttr": "metadata.defaultValue",
        "showType": "defaultValue",
        "config": {
          "value": [
            {
              "text": "文本",
              "code": "text",
              "value": ""
            },
            {
              "text": "值",
              "code": "value",
              "value": ""
            }
          ]
        }
      },
      {
        "text": "必填标识",
        "bindControlAttr": "$required",
        "showType": "boolean",
        "changeExecFunction": "renderContext"
      },
      {
        "text": "校验规则",
        "bindControlAttr": "metadata.validate",
        "showType": "dialog",
        "config": {
          "content": "DesValidateRule",
          "width": "800px",
          "height": "60vh",
          "buttonText": "设置",
          "title": "设置"
        }
      },
      {
        "text": "值属性设置",
        "bindControlAttr": "metadata.valueAttributes",
        "showType": "dialog",
        "config": {
          "content": "DesValueAttributes",
          "width": "600px",
          "height": "60vh",
          "buttonText": "设置",
          "title": "设置"
        }
      }
    ]
  }
]