[
  {
    "name": "基础属性",
    "attributes": [
      {
        "text": "组件标识",
        "bindControlAttr": "caption",
        "showType": "text"
      },
      {
        "text": "名称",
        "bindControlAttr": "label",
        "showType": "text"
      },
      {
        "text": "提示文字",
        "bindControlAttr": "placeholder",
        "showType": "text"
      },
      {
        "text": "名称是否显示",
        "bindControlAttr": "showLabel",
        "showType": "boolean"
      },
      {
        "text": "是否只读",
        "showType": "boolean",
        "bindControlAttr": "readOnly"
      },
      {
        "text": "是否失效",
        "showType": "boolean",
        "bindControlAttr": "disabled",
        "changeExecFunction": "renderContext"
      },
      {
        "text": "是否可见",
        "showType": "boolean",
        "bindControlAttr": "visible",
        "changeExecFunction": "renderContext"
      },
      {
        "text": "自动填充文本框",
        "showType": "boolean",
        "bindControlAttr": "autoSwitch",
        "desc": "<p>下拉项选择后，自动将数据填充进对应caption的其它文本框控件</p><p style='color: #ff7200'>例如：选中的下拉项里的mobile，将会被填充进表单里 caption=mobile 的文本框<p>"
      },
      {
        "text": "取消上下边距",
        "bindControlAttr": "tbNoPadding",
        "showType": "boolean"
      },
      {
        "text": "发生击键和执行搜索之间的延迟（以毫秒为单位)",
        "bindControlAttr": "delay",
        "showType": "number",
        "config": {
          "controls": false,
          "min": 0,
          "precision": 0
        }
      },
      {
        "text": "移动端提示文字",
        "showType": "text",
        "bindControlAttr": "dataCapion"
      },
      {
        "text": "移动端语音地址",
        "showType": "text",
        "bindControlAttr": "dataAudioUrl"
      },
      {
        "text": "移动端视频地址",
        "showType": "text",
        "bindControlAttr": "dataVideoUrl"
      }
    ]
  },
  {
    "name": "高级属性",
    "attributes": [
      {
        "text": "二次开发配置",
        "bindControlAttr": "development",
        "showType": "dialog",
        "config": {
          "content": "DesDevelopment",
          "width": "1000px",
          "height": "60vh"
        }
      },
      {
        "text": "描述文字",
        "showType": "text",
        "bindControlAttr": "dataCapion",
        "desc": "<p>移动端运行该组件时会在名称后追加一段备注文字。</p><p>因布局上的问题PC端暂不支持</p>"
      },
      {
        "text": "数据源类型",
        "bindControlAttr": "metaDataType",
        "showType": "select",
        "hiddenKeyClass": "sqlUrl",
        "showKeyClass": "metaDataDialog",
        "dictionary": [
          {
            "text": "接口",
            "value": "0"
          },
          {
            "text": "元数据组",
            "value": "1"
          }
        ]
      },
      {
        "text": "元数据组选择",
        "bindControlAttr": "chooseMetaData",
        "showType": "dialog",
        "config": {
          "content": "DesAutoCompleteMD",
          "width": "1000px",
          "height": "60vh",
          "buttonText": "选择",
          "title": "选择元数据组"
        },
        "class": "metaDataDialog",
        "hidden": "@[metaDataType === '1']"
      },
      {
        "text": "数据接口地址",
        "showType": "text",
        "class": "sqlUrl",
        "bindControlAttr": "source",
        "hidden": "@[metaDataType === '0']"
      },
      {
        "text": "显示最大条目",
        "bindControlAttr": "maxItemsNumber",
        "showType": "number",
        "config": {
          "controls": false,
          "min": 0,
          "precision": 0
        }
      },
      {
        "text": "默认值",
        "bindControlAttr": "metadata.defaultValue",
        "showType": "dialog",
        "config": {
          "width": "500px",
          "content": "DesDefaultValue",
          "value": [
            { "text": "文本", "code": "text", "value": "" }
          ]
        },
        "desc": "<p>当前组件在页面中初始化后显示的值，可支持@[xxxx]形式的表达式</p>"
      },
      {
        "text": "必填标识",
        "bindControlAttr": "required",
        "showType": "boolean",
        "desc": "<p>当前组件名称前显示<span style='color:red'>*</span>号，但与实际逻辑上是否必填无关</p>"
      },
      {
        "text": "校验规则",
        "bindControlAttr": "metadata.validate",
        "showType": "dialog",
        "config": {
          "content": "DesValidateRule",
          "width": "800px",
          "height": "60vh",
          "buttonText": "设置",
          "title": "设置"
        }
      },
      {
        "text": "校验错误提示位置",
        "bindControlAttr": "error_tipsPosition",
        "showType": "select",
        "dictionary": [
          {
            "text": "上",
            "value": "top"
          },
          {
            "text": "右",
            "value": "right"
          },
          {
            "text": "下",
            "value": "bottom"
          },
          {
            "text": "左",
            "value": "left"
          }
        ]
      },
      {
        "text": "值属性设置",
        "bindControlAttr": "metadata.valueAttributes",
        "showType": "dialog",
        "config": {
          "content": "DesValueAttributes",
          "width": "600px",
          "height": "60vh",
          "buttonText": "设置",
          "title": "设置"
        }
      }
    ]
  }
]