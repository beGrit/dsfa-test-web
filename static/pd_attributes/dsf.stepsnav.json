[
  {
    "name": "基础属性",
    "attributes": [
      {
        "text": "组件标识",
        "bindControlAttr": "caption",
        "showType": "text"
      },
      {
        "text": "步骤设置",
        "bindControlAttr": "metadata.dataSource",
        "showType": "dialog",
        "config": {
          "width": "900px",
          "content": "DesEnumEditor",
          "buttonText": "编辑步骤",
          "title": "编辑步骤"
        }
      },
      {
        "text": "组件高度",
        "bindControlAttr": "height",
        "showType": "text"
      },
      {
        "text": "步骤条高度(水平有效)",
        "bindControlAttr": "headHeight",
        "showType": "text"
      },
      {
        "text": "步骤条宽度(垂直有效)",
        "bindControlAttr": "headWidth",
        "showType": "text"
      },
      {
        "text": "简洁风格",
        "showType": "boolean",
        "bindControlAttr": "simple",
        "desc": "<p>简洁风格下，align-center(居中对齐) 、 description(描述性文字) 、 direction(显示方向) 、 space(间距) 都将失效。</p>"
      },
      {
        "text": "步骤条间距",
        "showType": "text",
        "bindControlAttr": "space",
        "desc": "每个 step 的间距，不填写将自适应间距。支持百分比。"
      },
      {
        "text": "居中对齐",
        "showType": "boolean",
        "bindControlAttr": "alignCenter"
      },
      {
        "text": "是否可点击跳转",
        "showType": "select",
        "bindControlAttr": "isClick",
        "dictionary": [
          {
            "text": "禁用点击",
            "value": "false"
          },
          {
            "text": "允许点击任何步骤",
            "value": "all"
          },
          {
            "text": "允许点击走过的步骤",
            "value": "old"
          }
        ]
      },
      {
        "text": "高亮依据",
        "showType": "select",
        "bindControlAttr": "heightLightBasis",
        "dictionary": [
          {
            "text": "以当前步骤及之前",
            "value": "current"
          },
          {
            "text": "以最大步骤及之前",
            "value": "max"
          }
        ]
      },
      {
        "text": "是否懒加载",
        "showType": "boolean",
        "bindControlAttr": "lazy"
      },
      {
        "text": "显示位置",
        "bindControlAttr": "position",
        "showType": "select",
        "dictionary": [
          {
            "text": "上",
            "value": "top"
          },
          {
            "text": "下",
            "value": "bottom"
          },
          {
            "text": "左",
            "value": "left"
          },
          {
            "text": "右",
            "value": "right"
          }
        ]
      }
    ]
  },
  {
    "name": "元数据",
    "attributes": [
      {
        "text": "默认值",
        "bindControlAttr": "metadata.defaultValue",
        "showType": "dialog",
        "config": {
          "width": "50vw",
          "height": "50vh",
          "content": "DesDefaultValue",
          "multiple": false
        },
        "desc": "<p>当前组件在页面中初始化后显示的值，可支持@[xxxx]形式的表达式</p>"
      },
      {
        "text": "值属性设置",
        "bindControlAttr": "metadata.valueAttributes",
        "showType": "dialog",
        "config": {
          "content": "DesValueAttributes",
          "width": "50vw",
          "height": "50vh",
          "buttonText": "设置",
          "title": "设置"
        }
      }
    ]
  },
  {
    "name": "高级属性",
    "attributes": [
      {
        "text": "动态属性绑定",
        "bindControlAttr": "development",
        "showType": "dialog",
        "config": {
          "content": "DesDevelopment",
          "width": "1000px",
          "height": "60vh"
        }
      }
    ]
  }
]
