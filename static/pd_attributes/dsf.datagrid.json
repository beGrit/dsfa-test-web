[

  {
    "name": "基础属性",
    "attributes": [{
        "text": "组件标识",
        "bindControlAttr": "caption",
        "showType": "text"
      },
      {
        "text": "标题",
        "showType": "text",
        "bindControlAttr": "label"
      },
      {
        "text": "搜索框提示文字",
        "showType": "text",
        "bindControlAttr": "searchPlaceholder"
      },
      {
        "text": "自适应父容器",
        "showType": "boolean",
        "bindControlAttr": "fit"
      },

      {
        "text": "按钮栏设置",
        "showType": "dialog",
        "bindControlAttr": "buttons",
        "config": {
          "content": "DesButtonEdit",
          "width": "1400px",
          "height": "60vh"
        }
      },
      {
        "text": "显示面板头部",
        "showType": "boolean",
        "bindControlAttr": "showHead"
      },
      {
        "text": "显示标题",
        "showType": "boolean",
        "bindControlAttr": "showTitle"
      },
      {
        "text": "是否显示检索框",
        "showType": "boolean",
        "bindControlAttr": "showSearch"
      },
      {
        "text": "是否显示checkbox列",
        "showType": "boolean",
        "bindControlAttr": "checkboxColumn.show"
      },
      {
        "text": "是否仅单选",
        "showType": "boolean",
        "bindControlAttr": "isSingleChecked",
        "hidden": "@[checkboxColumn.show]===true"
      },
      {
        "text": "是否显示索引列",
        "showType": "boolean",
        "bindControlAttr": "indexColumn.show"
      },
      {
        "text": "是否显示操作按钮",
        "showType": "boolean",
        "bindControlAttr": "operateColumn.show"
      },
      {
        "text": "显示分页(最多显示100条)",
        "showType": "boolean",
        "bindControlAttr": "showPagination",
        "class": "showPagination"
      },
      {
        "text": "每页显示条数(逗号分隔)",
        "showType": "text",
        "bindControlAttr": "limits",
        "dataType": "Number[]",
        "splitChart": ",",
        "changeExecFunction": "renderPagination",
        "hidden": "@[showPagination]===true"
      },
      {
        "text": "自定义分页排版(逗号分隔)",
        "showType": "text",
        "bindControlAttr": "pagerLayout",
        "hidden": "@[showPagination]===true"
      }

    ]
  },
  {
    "name": "数据查询属性",
    "attributes": [{
        "text": "挂载后立即请求数据",
        "showType": "boolean",
        "bindControlAttr": "mountedRequestData"
      },
      {
        "text": "查询条件设置",
        "showType": "dialog",
        "bindControlAttr": "searchInfo",
        "config": {
          "title": "查询条件设置",
          "content": "DesDataGridSearch",
          "width": "1000px",
          "height": "60vh",
          "buttonText": "设置"
        }
      },
      {
        "text": "高级查询设置",
        "showType": "dialog",
        "bindControlAttr": "superSearchInfo",
        "config": {
          "title": "高级查询设置",
          "content":"DesSuperSearchSetting",
          "width": "90vw",
          "height": "60vh",
          "buttonText": "设置"
        }
      },
      {
        "text": "高级检索是否显示筛选栏",
        "showType": "boolean",
        "bindControlAttr": "showSuperSearchFilter"
      },
      {
        "text": "高级查询默认初始化行数",
        "showType": "number",
        "bindControlAttr": "superSearchDefaultRowsNumber"
      },
      {
        "text": "高级查询行间隔线",
        "showType": "boolean",
        "bindControlAttr": "superSearchRowBorder"
      },
      {
        "text": "默认排序",
        "showType": "dialog",
        "bindControlAttr": "defaultOrder",
        "config": {
          "title": "排序栏设置",
          "content":"DesListOrderByEdit",
          "width": "1170px",
          "height": "60vh",
          "buttonText": "设置"
        }
      },
      {
        "text": "自定义排序",
        "showType": "dialog",
        "bindControlAttr": "customerOrder",
        "config": {
          "title": "排序栏设置",
          "content":"DesCustomerOrderByEdit",
          "width": "1170px",
          "height": "60vh",
          "buttonText": "设置"
        }
      }
    ]
  },
  {
    "name": "列表属性",
    "attributes": [{
        "text": "简化输出",
        "showType": "boolean",
        "bindControlAttr": "tableTextProxy",
        "desc": "提高表格输出性能，简化后在二次开发中无法获取单元格中组件实例"
      },
      {
        "text": "索引列宽度",
        "showType": "text",
        "bindControlAttr": "indexColumn.width"
      },
      {
        "text": "表头设置",
        "showType": "dialog",
        "bindControlAttr": "columns",
        "config": {
          "title": "表头设置",
          "content": "DesColumnsEdit",
          "width": "1000px",
          "height": "60vh",
          "slotName": "default",
          "buttonText": "设置"
        }
      },
      {
        "text": "操作列宽度",
        "showType": "text",
        "bindControlAttr": "operateColumn.width"
      },
      {
        "text": "数据行按钮设置",
        "showType": "dialog",
        "bindControlAttr": "rowButtons",
        "config": {
          "content": "DesButtonEdit",
          "width": "1400px",
          "height": "60vh",
          "params": {
            "isDblClickBind": true,
            "defaultShowText": false,
            "defaultButtonStyle": "icon-text"
          }
        }
      }
    ]
  },
  {
    "name": "高级属性",
    "attributes": [{
        "text": "数据展示方式",
        "showType": "checkbox",
        "bindControlAttr": "showType",
        "dictionary": [{
          "text": "列表",
          "value": "list",
          "checked": true
        }, {
          "text": "卡片",
          "value": "card"
        }, {
          "text": "概述列表",
          "value": "img_list"
        }]
      },
      {
        "text": "卡片模式使用分页条",
        "showType": "boolean",
        "bindControlAttr": "cardShowPag",
        "changeExecFunction": "changeCardPag"
      },
      {
        "text": "概览列表项边框",
        "bindControlAttr": "$imgListBorder",
        "changeExecFunction": "render",
        "showType": "boolean"
      },
      {
        "text": "概览列表项圆角",
        "bindControlAttr": "$imgListBorderRadius",
        "changeExecFunction": "render",
        "showType": "boolean"
      },
      {
        "text": "浏览范围",
        "showType": "dialog",
        "bindControlAttr": "browseScope",
        "config": {
          "title": "范围设置",
          "content": "BrowseScopeEdit",
          "width": "600px",
          "height": "60vh",
          "buttonText": "设置",
          "class": "browseScope"
        }
      },
      {
        "text": "二次开发配置",
        "bindControlAttr": "development",
        "showType": "dialog",
        "config": {
          "content": "DesDevelopment",
          "width": "1000px",
          "height": "60vh"
        }
      },
      {
        "text": "卡片布局宽度",
        "bindControlAttr": "$cardWidth",
        "changeExecFunction": "resize",
        "showType": "text"
      }

    ]
  }
]