[
  {
    "name": "基础属性",
    "attributes": [
      {
        "text": "组件标识",
        "bindControlAttr": "caption",
        "showType": "text"
      },
      {
        "text": "名称",
        "bindControlAttr": "label",
        "showType": "text"
      },
      {
        "text": "名称是否显示",
        "bindControlAttr": "showLabel",
        "showType": "boolean"
      },
      {
        "text": "是否可见",
        "showType": "boolean",
        "bindControlAttr": "visible",
        "changeExecFunction": "render"
      },
      {
        "text": "是否只读",
        "showType": "boolean",
        "bindControlAttr": "readOnly"
      }
    ]
  },
  {
    "name":"控件属性",
    "attributes":[
      {
        "text": "高度(px/像素)",
        "showType": "number",
        "config": {
          "controls": false,
          "min": 0,
          "precision": 0
        },
        "bindControlAttr": "$richTxtHeight"
      },
      {
        "text": "自定义工具栏",
        "showType": "dialog",
        "bindControlAttr": "toolBar",
        "config": {
          "title": "UEditor头部工具栏设置",
          "content": "DesUeditorToolbar",
          "width": "1000px",
          "height": "60vh",
          "slotName": "default",
          "buttonText": "设置"
        }
      }
    ]

  },
  {
    "name": "高级属性",
    "attributes": [
      {
        "text": "二次开发配置",
        "bindControlAttr": "development",
        "showType": "dialog",
        "config": {
          "content": "DesDevelopment",
          "width": "1000px",
          "height": "60vh"
        }
      },
      {
        "text": "描述文字",
        "showType": "text",
        "bindControlAttr": "dataCapion",
        "desc": "<p>移动端运行该组件时会在名称后追加一段备注文字。</p><p>因布局上的问题PC端暂不支持</p>"
      },
      {
        "text": "校验规则",
        "bindControlAttr": "metadata.validate",
        "showType": "dialog",
        "config": {
          "content": "DesValidateRule",
          "width": "800px",
          "height": "60vh",
          "buttonText": "设置",
          "title": "设置"
        }
      },
      {
        "text": "校验错误提示位置",
        "bindControlAttr": "$error_tipsPosition",
        "showType": "select",
        "dictionary": [{
          "text": "上",
          "value": "top"
        }, {
          "text": "右",
          "value": "right"
        },
          {
            "text": "下",
            "value": "bottom"
          },
          {
            "text": "左",
            "value": "left"
          }
        ]

      },
      {
        "text": "值属性设置",
        "bindControlAttr": "metadata.valueAttributes",
        "showType": "dialog",
        "config": {
          "content": "DesValueAttributes",
          "width": "600px",
          "height": "450px",
          "buttonText": "设置",
          "title": "设置"
        }
      }
    ]
  }
]