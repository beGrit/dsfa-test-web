[
  {
    "name": "基础属性",
    "attributes": [
      {
        "text": "组件标识",
        "bindControlAttr": "caption",
        "showType": "text"
      },
      {
        "text": "名称",
        "bindControlAttr": "label",
        "showType": "text",
        "changeExecFunction": "renderContext"
      },
      {
        "text": "提示文字",
        "bindControlAttr": "placeholder",
        "showType": "text"
      },
      {
        "text": "名称是否显示",
        "bindControlAttr": "showLabel",
        "showType": "boolean"
      },
      {
        "text": "是否可见",
        "showType": "boolean",
        "bindControlAttr": "visible"
      },
      {
        "text": "取消上下边距",
        "bindControlAttr": "tbNoPadding",
        "showType": "boolean"
      },
      {
        "text": "是否有编号按钮",
        "bindControlAttr": "showBtn",
        "showType": "boolean"
      },
      {
        "text": "自定义编号按钮",
        "bindControlAttr": "btnIcon",
        "showType": "text",
        "desc": "<a href='./static/pc/iconfont/demo_index.html' target='_blank'>查看图标</a>",
        "hidden": "@[showBtn]==true"
      }
    ]
  },
  {
    "name": "高级属性",
    "attributes": [
      {
        "text": "默认值",
        "bindControlAttr": "metadata.defaultValue",
        "showType": "dialog",
        "config": {
          "width": "500px",
          "content": "DesDefaultValue",
          "value": [
            {
              "text": "值",
              "code": "text",
              "value": ""
            }
          ]
        }
      },
      {
        "text": "编号规则",
        "bindControlAttr": "rule",
        "showType": "dialog",
        "config": {
          "content": "DesNumeration",
          "width": "500px",
          "height": "60vh",
          "buttonText": "设置",
          "title": "设置编号规则"
        }
      },
      {
        "text": "描述文字",
        "showType": "text",
        "bindControlAttr": "dataCapion",
        "desc": "<p>移动端运行该组件时会在名称后追加一段备注文字。</p><p>因布局上的问题PC端暂不支持</p>"
      },
      {
        "text": "必填标识",
        "bindControlAttr": "required",
        "showType": "boolean",
        "changeExecFunction": "renderContext"
      },
      {
        "text": "校验规则",
        "bindControlAttr": "metadata.validate",
        "showType": "dialog",
        "config": {
          "content": "DesValidateRule",
          "width": "800px",
          "height": "60vh",
          "buttonText": "设置",
          "title": "设置"
        }
      },
      {
        "text": "校验错误提示位置",
        "bindControlAttr": "error_tipsPosition",
        "showType": "select",
        "dictionary": [
          {
            "text": "上",
            "value": "top"
          },
          {
            "text": "右",
            "value": "right"
          },
          {
            "text": "下",
            "value": "bottom"
          },
          {
            "text": "左",
            "value": "left"
          }
        ]
      },
      {
        "text": "值属性设置",
        "bindControlAttr": "metadata.valueAttributes",
        "showType": "dialog",
        "config": {
          "content": "DesValueAttributes",
          "width": "600px",
          "height": "60vh",
          "buttonText": "设置",
          "title": "设置"
        }
      },
      {
        "text": "是否可以提交",
        "bindControlAttr": "allowPost",
        "showType": "boolean"
      },
      {
        "text": "是否即时触发审核",
        "bindControlAttr": "immediatelyAudit",
        "showType": "boolean"
      }
    ]
  }
]